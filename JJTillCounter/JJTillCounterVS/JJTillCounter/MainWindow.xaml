<Window x:Class="JJTillCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JJTillCounter"
        mc:Ignorable="d"
        Title="JJTillCounter" Height="625" Width="561" Loaded="Window_Loaded" Icon="Drawable/Coin.png" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Window.Background>
        <SolidColorBrush Color="White"/>
    </Window.Background>

<!--
